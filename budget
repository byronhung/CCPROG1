#include <stdio.h>

void compareValue (int *iAmount, int iBudget) {
	
	if (*iAmount == iBudget) {
		
		printf("Exact Budget");
		
	} else if (*iAmount > iBudget) {
		
		printf("Over Budget");
	
	} else {
		
		printf("In Budget");
	}
}

